Import('env')

# Add/remove projects from build

# Only build the following samples for the HOST operating system.
# The samples/examples for target platforms are handled by
# the target specific directory (viz. host/arduino).
if env['HOST'] == 'win32' or env['HOST'] == 'linux':
    env.SConscript(['basic/SConscript'])
    env.SConscript(['secure/SConscript'])
